<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="270dp"
            android:layout_height="390dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cover" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="片名："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_mname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="别名："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_maliasname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="导演："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编剧："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_screenwriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="主演："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_leadingactor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上映："
                android:textSize="@dimen/common_text_18sp" />

            <TextView
                android:id="@+id/tv_realsetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:gravity="center"
            android:text="剧情简介："
            android:textSize="@dimen/common_text_18sp" />

        <TextView
            android:id="@+id/tv_mdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>