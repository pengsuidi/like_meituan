<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.payActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="总价："
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/money"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:hint="￥"
                android:inputType="textPassword"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_30dp"
            android:hint="请输入支付密码"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_16dp"
            android:layout_below="@+id/ll_loginactivity_two"
            android:background="@drawable/rounded_btn_register"
            android:text="确认支付" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>