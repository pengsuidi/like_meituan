<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleMarginStart="140dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="登录账号"
        app:popupTheme="@style/CommentPopupMenu"
        android:background="@color/colorPrimaryDark">

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入用户名"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_30dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_16dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_remember"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="记住密码" />

        <CheckBox
            android:id="@+id/check_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="自动登录" />

        <Button
            android:id="@+id/btn_to_register"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="#00cffe"
            android:textSize="15sp" />
    </RelativeLayout>

    <com.amaker.personalinfo.MyUI.JumpButton
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="登录" />


</LinearLayout>