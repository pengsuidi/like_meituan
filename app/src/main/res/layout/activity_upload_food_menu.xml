<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_upload_food_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu="@menu/upload_foodmenu_menu"
        app:popupTheme="@style/CommentPopupMenu"
        app:title="请上传食品内容" />
    <ImageButton
        android:id="@+id/add_new_food"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        app:srcCompat="@drawable/add_new_food_menu" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_upload_foodmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>